{
  "name": "world-holiday-calendar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run validate-data && npm run copy-cache && next build",
    "build:static": "npm run validate-data && tsx scripts/build-static-pages.ts --static",
    "build:isr": "npm run validate-data && tsx scripts/build-static-pages.ts",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "validate-data": "tsx scripts/validate-build-data.ts",
    "validate-data-only": "tsx scripts/validate-build-data.ts --no-translations",
    "collect-data": "tsx scripts/collect-holiday-data.ts",
    "collect-all": "tsx scripts/collect-holiday-data.ts --all",
    "collect-current-year": "tsx scripts/collect-holiday-data.ts --all --year $(date +%Y)",
    "test-collector": "tsx scripts/test-data-collector.ts",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "seo-setup": "npm run generate-sitemap",
    "validate-translations": "tsx scripts/validate-translations.ts",
    "validate-translations-strict": "tsx scripts/validate-translations.ts --strict",
    "check-translations": "tsx scripts/validate-translations.ts --verbose",
    "manage-cache": "tsx scripts/manage-ai-cache.ts",
    "generate-descriptions": "tsx scripts/generate-all-holiday-descriptions.ts",
    "generate-descriptions-en": "tsx scripts/generate-all-holiday-descriptions.ts --en",
    "generate-descriptions-force": "tsx scripts/generate-all-holiday-descriptions.ts --force",
    "setup-calendarific": "tsx scripts/setup-calendarific.ts",
    "test-improved-ai": "tsx scripts/test-improved-ai-content.ts",
    "test-ai-detailed": "tsx scripts/test-improved-ai-content.ts",
    "generate-missing-descriptions": "tsx scripts/generate-missing-ai-descriptions.ts",
    "generate-country-descriptions": "tsx scripts/generate-missing-ai-descriptions.ts",
    "copy-cache": "tsx scripts/copy-cache-to-public.ts",
    "collect-nager": "tsx scripts/collect-nager-countries.ts",
    "collect-missing": "tsx scripts/collect-nager-countries.ts",
    "update-countries": "tsx scripts/update-country-constants.ts",
    "update-translations": "tsx scripts/update-country-translations.ts",
    "test-supabase": "tsx scripts/test-supabase-connection.ts",
    "setup-supabase": "tsx scripts/setup-supabase-instructions.ts",
    "test-admin-auth": "tsx scripts/test-admin-auth.ts",
    "test-admin-api": "tsx scripts/test-admin-api.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@supabase/supabase-js": "^2.53.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
